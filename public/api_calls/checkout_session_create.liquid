---
name: checkout_session_create
to: https://api.stripe.com/v1/checkout/sessions
format: https
request_type: Post
callback: >
  {% liquid
    assign response_data = response.body | to_hash
    if response_data.error
      log response_data.error, type: 'modules/payments_stripe/checkout_session_create'
    endif
  %}
request_headers: >
  {% if data %}
    {
      "Content-Type": "application/x-www-form-urlencoded",
      "Authorization": "Bearer {{ context.constants.stripe_sk_key }}"
    }
  {% endif %}
---
{% liquid
  log data, type: 'data in api'
  # function encoded = 'modules/payments_stripe/helpers/json_to_encoded', data: data
  # log encoded, type: 'encoded'
  echo data
%}
